@model KarmyogiWeb.SearchViewModel

<div class="container wrap_1">
    @using (Html.BeginForm("ProfileSearch", "Home", FormMethod.Post))
    { 
        <div class="search_top">
            <div class="inline-block">
                <label class="gender_1">I am looking for :</label>
                <div class="age_box1" style="max-width: 100%; display: inline-block;">
                    @Html.DropDownListFor(model => model.LookingFor, Model.LookingForList)
                </div>
            </div>
            <div class="inline-block">
                <label class="gender_1">Located In :</label>
                <div class="age_box1" style="max-width: 100%; display: inline-block;">
                    @Html.DropDownListFor(model => model.StateId, Model.States, "* Select State")
                </div>
            </div>
            <div class="inline-block">
                <label class="gender_1">Religion :</label>
                <div class="age_box1" style="max-width: 100%; display: inline-block;">
                    @Html.DropDownListFor(model => model.ReligionId, Model.Religions, "* Select Religion")
                </div>
            </div>
            <div class="inline-block">
                <label class="gender_1">Caste :</label>
                <div class="age_box1" style="max-width: 100%; display: inline-block;">
                    @Html.DropDownListFor(model => model.CasteId, Model.Castes, "* Select Caste")
                </div>
            </div>
            <div style="width:149px; float:right">
                <div style="width:28%; float:left">
                    <label class="gender_1">Age :</label>
                </div>
                <div style="display: inline-block; width:28%; float:left">
                    <div class="input-group spinner">
                        @Html.TextBoxFor(model => model.AgeFrom, new { @class = "form-control" })
                        <div class="input-group-btn-vertical">
                            <button class="btn btn-default" type="button"><i class="fa fa-caret-up"></i></button>
                            <button class="btn btn-default" type="button"><i class="fa fa-caret-down"></i></button>
                        </div>
                    </div>
                </div>
                <div style="max-width: 0px;float:left;color:#FFFFFF">
                    &nbsp;-&nbsp;
                </div>
                <div style="display: inline-block; width:28%">
                    <div class="input-group spinner">
                        @Html.TextBoxFor(model => model.AgeTo, new { @class = "form-control" })
                        <div class="input-group-btn-vertical">
                            <button class="btn btn-default" type="button"><i class="fa fa-caret-up"></i></button>
                            <button class="btn btn-default" type="button"><i class="fa fa-caret-down"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>       
        <div class="submit inline-block">
            <input id="submit-btn" class="hvr-wobble-vertical" type="submit" value="Find Matches">
        </div>
    }
</div>
